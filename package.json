{
  "name": "wonder-ui",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:core": "gulp build:core",
    "build:icons": "gulp build:icons",
    "build:router": "gulp build:router",
    "build:styles": "gulp build:styles",
    "build:utils": "gulp build:utils",
    "clean": "gulp clean",
    "kitchen-sink:dev": "ale dev",
    "kitchen-sink:build": "ale build",
    "watch": "gulp",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "commit": "git-cz",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint ./src --fix --ext .js,.jsx,.ts,.tsx"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "ale-cli": "^4.0.0-1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "workspaces": [
    "packages/*",
    "packages/examples/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"**/*.*(js|jsx)\"",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
