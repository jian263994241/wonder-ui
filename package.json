{
  "name": "wonder-ui",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:core": "gulp build:core",
    "build:icons": "gulp build:icons",
    "build:router": "gulp build:router",
    "build:styles": "yarn workspace @wonder-ui/styles build",
    "build:utils": "gulp build:utils",
    "clean": "gulp clean",
    "kitchen-sink:dev": "ale dev",
    "kitchen-sink:build": "ale build",
    "watch": "gulp",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "commit": "git-cz",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint ./src --fix --ext .js,.jsx,.ts,.tsx"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "ale-cli": "^3.0.5",
    "babel-loader": "^8.0.6",
    "babel-preset": "^1.1.6",
    "css-loader": "^3.2.0",
    "del": "^3.0.0",
    "file-loader": "^4.2.0",
    "git-cz": "^4.7.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "style-loader": "^1.0.0",
    "styled-components": "^4.4.1",
    "typescript": "^4.1.3",
    "vconsole": "^3.3.4",
    "webpack": "^4.41.2"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "babel-plugin-import": "^1.13.0",
    "caniuse-lite": "^1.0.30001179",
    "lcn": "^1.0.3",
    "react-styleguidist": "^11.0.5",
    "tsdx": "^0.14.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"**/*.*(js|jsx)\"",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
