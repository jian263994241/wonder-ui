{
  "name": "wonder-ui",
  "private": true,
  "scripts": {
    "commit": "cz",
    "build": "build:core & build:styled & build:icons",
    "build:core": "yarn workspace @wonder-ui/core build",
    "build:styles": "yarn workspace @wonder-ui/styles build",
    "build:styled": "yarn workspace @wonder-ui/styled build",
    "build:icons": "yarn workspace @wonder-ui/icons build",
    "doc": "dumi dev",
    "doc:build": "dumi build"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.3",
    "@testing-library/react-hooks": "^5.0.0",
    "babel-jest": "^26.6.3",
    "dumi": "^1.1.4",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.1.0",
    "tsdx": "^0.14.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@babel/plugin-transform-react-jsx": "^7.12.13",
    "@emotion/jest": "^11.1.0",
    "@testing-library/user-event": "^12.6.0",
    "@types/enzyme": "^3.10.8",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "ale-cli": "^4.0.0",
    "commitizen": "^4.2.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "workspaces": [
    "./website",
    "packages/*",
    "examples/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"**/*.*(js|jsx|ts|tsx)\"",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
