{
  "name": "wonder-ui",
  "private": true,
  "scripts": {
    "commit": "cz",
    "build": "build:core & build:styled & build:icons",
    "build:core": "yarn workspace @wonder-ui/core build",
    "build:hooks": "yarn workspace @wonder-ui/hooks build",
    "build:icons": "yarn workspace @wonder-ui/icons build",
    "build:styled": "yarn workspace @wonder-ui/styled build",
    "build:styles": "yarn workspace @wonder-ui/styles build",
    "build:utils": "yarn workspace @wonder-ui/utils build",
    "doc": "dumi dev",
    "doc:build": "dumi build"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/helper-define-map": "^7.13.12",
    "@babel/plugin-transform-react-jsx-development": "^7.12.17",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.3",
    "@testing-library/react-hooks": "^5.0.0",
    "babel-jest": "^26.6.3",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.1.0",
    "tsdx": "^0.14.1",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@emotion/babel-plugin": "^11.2.0",
    "@emotion/jest": "^11.1.0",
    "@testing-library/user-event": "^12.6.0",
    "@types/enzyme": "^3.10.8",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "commitizen": "^4.2.2",
    "dayjs": "^1.10.6",
    "dumi": "^1.1.30",
    "dumi-theme-mobile": "^1.1.13",
    "lcn": "^3.0.2",
    "node-html-parser": "^2.1.0",
    "rc-field-form": "^1.22.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "util-helpers": "^4.0.1"
  },
  "workspaces": [
    "./website",
    "packages/*",
    "examples/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"**/*.*(js|jsx|ts|tsx)\"",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "resolutions": {
    "typescript": "^4.3.2",
    "rollup-plugin-typescript2": "0.30.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
